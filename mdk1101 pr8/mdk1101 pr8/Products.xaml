<Window x:Class="mdk1101_pr8.Products"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mdk1101_pr8"
        mc:Ignorable="d"
        Title="Products" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <DataGrid x:Name="products" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ID}"></DataGridTextColumn>
                <DataGridTextColumn Header="Произведенный товар" Binding="{Binding Produced_goods}"></DataGridTextColumn>
                <DataGridTextColumn Header="Единицы_измерения" Binding="{Binding Units_measurements}"></DataGridTextColumn>
                <DataGridTextColumn Header="Цена" Binding="{Binding Price}"></DataGridTextColumn>
                <DataGridTextColumn Header="Количество" Binding="{Binding Quantity}"></DataGridTextColumn>
                <DataGridTextColumn Header="Код КФХ " Binding="{Binding Code_KFX}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
